<%- include("layout/header") %>
<h1>Welcome to admin page</h1>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if(message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" area-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>    
            <div class="table-responsive"> 
                <% if ( users != '') { %>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <td>Id</td>
                                <td>Team Name</td>
                                <td>Sponser-1</td>
                                <td>Sponser-2</td>
                                <td>Village</td>
                                <td>Captain</td>
                                <td>Phone</td>
                                <td>Image</td>
                                <td>Action</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>                            
                                <tr class="align-middle">
                                    <td><%= index %></td>
                                    <td><%= row.tname %></td>
                                    <td><%= row.sp_1 %></td>
                                    <td><%= row.sp_2 %></td>
                                    <td><%= row.village %></td>
                                    <td><%= row.captain %></td>
                                    <td><%= row.phone %></td>
                                    <td><img src="<%= row.image %>" width="40" class="img-thumbnail"/></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i> </a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i> </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else{ %>
                    <h1 class="text-center text-secondary mt-5">
                        No User found in the database 
                    </h1>
                <% } %>
            </div>
        </div>
    </div>  
</div>